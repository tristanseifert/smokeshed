// No filename available placeholder
"placeholder.fileName" = "(No Name)";
// File size unavailable (probably error)
"placeholder.fileSize" = "Unknown filesize";
// Failed to determine file type
"placeholder.fileType" = "Unknown type";
// No capture date in image
"placeholder.captureDate" = "No capture date";
// No import date in image
"placeholder.importDate" = "No import date";
// No lens or focal length information
"placeholder.lensInfo" = "No lens information";
// No camera information
"placeholder.cameraInfo" = "No camera information";

// Image dimensions format string
"dimensions.format" = "%1$.0f × %2$.0f";

// Format string for detail label with one info string
"detail.1rows" = "%1$@";
// Format string for detail label with two info strings
"detail.2rows" = "%1$@\n%2$@";

// Sequence number format string
"seqnum.format" = "%1$u";

// No lens name
"lens.noLens" = "Unknown lens";
// Format string for lens info (1 = name, 2 = focal length)
"lens.format.full" = "%1$@ (%2$.1f mm)";
// Format string for lens info with only the lens name (1 = name)
"lens.format.nameOnly" = "%1$@";

/**
 * Exposure detail format strings
 *
 * Note that each format string _must_ have a single trailing space: this allows
 * them to be placed next to each other without any extra spacing required.
 */
// 1 = numerator, 2 = denominator
"exposure.time.fraction" = "%1$d⁄%2$d ";
// 1 = seconds (range 1..<60)
"exposure.time.seconds" = "%1$g sec ";
// 1 = component formatter output
"exposure.time.formatted" = "%1$@ ";
// 1 = aperture
"exposure.aperture" = "ƒ/%1$g ";
// 1 = sensitivity value, 2 = sensitivity type
"exposure.sensitivity" = "%2$@ %1$g ";

// 1 = exposure string, 2 = aperture string, 3 = sensitivity string
"exposure.format" = "%1$@%2$@%3$@";
// no exposure information available
"exposure.none" = "No exposure information";
